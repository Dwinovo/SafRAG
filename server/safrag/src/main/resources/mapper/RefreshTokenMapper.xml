<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dwinovo.safrag.mapper.RefreshTokenMapper">

    <resultMap id="RefreshTokenMap" type="com.dwinovo.safrag.pojo.RefreshToken">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="refreshToken" column="refresh_token"/>
        <result property="expiresAt" column="expires_at"/>
        <result property="createdAt" column="created_at"/>
        <result property="revoked" column="revoked"/>
    </resultMap>

    <insert id="insert" parameterType="com.dwinovo.safrag.pojo.RefreshToken" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO refresh_tokens (user_id, refresh_token, expires_at, created_at, revoked)
        VALUES (#{userId}, #{refreshToken}, #{expiresAt}, #{createdAt}, #{revoked})
    </insert>

    <select id="findByTokenHash" parameterType="string" resultMap="RefreshTokenMap">
        SELECT id, user_id, refresh_token, expires_at, created_at, revoked
        FROM refresh_tokens
        WHERE refresh_token = #{tokenHash}
        LIMIT 1
    </select>

    <update id="revokeByTokenHash" parameterType="string">
        UPDATE refresh_tokens
        SET revoked = TRUE
        WHERE refresh_token = #{tokenHash}
    </update>

    <delete id="deleteExpired" parameterType="java.util.Date">
        DELETE FROM refresh_tokens
        WHERE expires_at &lt;= #{now}
    </delete>

    <delete id="deleteByTokenHash" parameterType="string">
        DELETE FROM refresh_tokens
        WHERE refresh_token = #{tokenHash}
    </delete>

</mapper>


